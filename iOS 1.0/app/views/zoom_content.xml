<Alloy>
	<View id="zoom_content">
		<View id="buttons">
			<ImageView id="btn_like" />
			<ImageView id="btn_share" />
			<ImageView id="shadow" />
		</View>
		<ScrollView id="scroll">
			<ImageView id="photo"/>
			<View id="border_top"/>
			<View id="border_center" />
			<View id="column_left">
				<View id="author">
					<ImageView id="profile_picture"/>
					<Label id="username" />
					<Label id="caption" />
					<Label id="border" />
				</View>
			</View>
			<View id="column_right">
				<View id="location">
					<ImageView id="location_icon" />
					<Label id="location_name">Location</Label>
					<View id="location_border"/>
				</View>
				<View id="tags">
					<ImageView id="tags_icon" />
					<Label id="tags_name">Tags</Label>
				</View>
			</View>
		</ScrollView>
	</View>
</Alloy>