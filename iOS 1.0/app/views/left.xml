<Alloy>
    <View id="left">
        <View id="back" />
        <ImageView id="shadow" />
        <ImageView id="logo" onSingletap="closeLeft" />
        <ImageView id="search_back" onSingletap="searchTap">
            <TextField id="search_field" onReturn="doSearch" onFocus="fieldFocus" onBlur="fieldBlur" />
            <View id="search_button" />
        </ImageView>
        <TableView id="options" onClick="openSelection" />
        <View id="subscriber">
        	<View id="border" />
        	<ImageView id="profile_picture" />
        	<Label id="username" />
        	<ImageView id="logout" onSingletap="logoutTap"/>
		</View>
    </View>
</Alloy>