<Alloy>
	<View id="zoom_share">
		<ImageView id="top" />
		<View class="primary" onSingletap="facebookTap">
			<ImageView class="icon" image="popup/icon_facebook.png" />
			<Label class="primary_label">Facebook</Label>
		</View>
		<View class="primary" onSingletap="twitterTap">
			<ImageView class="icon" image="popup/icon_twitter.png" />
			<Label class="primary_label">Twitter</Label>
		</View>
		<View class="primary" onSingletap="copyTap">
			<ImageView class="icon" image="popup/icon_copy.png" />
			<Label class="primary_label">Copy link</Label>
		</View>
		<ImageView id="bottom" />
	</View>
</Alloy>